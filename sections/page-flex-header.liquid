<section
  class="page-flex-header"
  aria-labelledby="page-flex-heading"
>
  <div class="layout-wrapper">
    <div class="page-flex-header__inner">
      {% if section.settings.heading != blank %}
        <h1 id="page-flex-heading" class="type-h1-large">{{ section.settings.heading }}</h1>
      {% endif %}
      {% if section.settings.intro != blank %}
        <div class="page-flex-header__intro type-p-x-large">
          {{ section.settings.intro | newline_to_br }}
        </div>
      {% endif %}
      {% if section.settings.button != blank and section.settings.cta != blank %}
        <div class="page-flex-header__button">
          <div data-hover-shake>
            <a
              class="primary-button"
              href="{{ section.settings.cta }}"
              aria-label="{{ section.settings.button }}"
            >
              {{- section.settings.button -}}
            </a>
          </div>
        </div>
      {% endif %}
      {% if section.settings.show_page_content and page and page.content != blank %}
        <div class="page-flex-header__content rich-text">
          {{ page.content }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .page-flex-header__inner {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  .page-flex-heading,
  .page-flex-header__intro {
    text-align: center;
  }

  .page-flex-header__button {
    padding-top: 1.5rem;
  }
</style>

{% schema %}
{
  "name": "Page Header (flex)",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Page heading" },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Intro paragraph",
      "default": "Add an optional introductory paragraph for this page."
    },
    { "type": "text", "id": "button", "label": "Button text" },
    { "type": "url", "id": "cta", "label": "Button link" },
    { "type": "checkbox", "id": "show_page_content", "label": "Show page body content (from Pages)", "default": false }
  ],
  "presets": [{ "name": "Page Header (flex)", "category": "Pages" }]
}
{% endschema %}
