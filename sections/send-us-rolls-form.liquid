<product-info
  id="MainProduct-{{ section.id }}"
  data-section="{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-update-url="true"
  data-url="{{ product.url }}"
>
  <script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

  <section id="ProductInfo-{{ section.id }}" class="film-service">
    {%- assign product_form_id = 'product-form-' | append: section.id -%}

    <div class="film-service-inner">
      <h2>{{ section.settings.heading }}</h2>

      <form method="post" action="{{ routes.cart_add_url }}" id="film-service-form">
        <input type="hidden" name="id" value="{{ all_products[section.settings.product].variants.first.id }}">

        {% render 'form-fieldset',
          legend: section.settings.store_label,
          type: 'store',
          property: 'Store',
          input_type: 'radio'
        %}

        {% render 'form-fieldset',
          legend: section.settings.service_label,
          type: 'service',
          property: 'Service',
          input_type: 'radio',
          show_help: true,
          help_label: section.settings.help_label_service,
          help_sub_label: section.settings.help_sub_label_service
        %}

        {% render 'form-fieldset',
          legend: section.settings.format_label,
          type: 'film_format',
          property: 'Film Format',
          input_type: 'radio',
          show_help: true,
          help_label: section.settings.help_label_format,
          help_sub_label: section.settings.help_sub_label_format
        %}

        {% render 'form-fieldset',
          legend: section.settings.process_label,
          type: 'process_option',
          property: 'Process',
          input_type: 'radio',
          show_help: true,
          help_label: section.settings.help_label_process,
          help_sub_label: section.settings.help_sub_label_process
        %}

        <fieldset>
          <legend>{{ section.settings.rolls_label }}</legend>
          <input type="number" name="properties[Number of Rolls]" value="1" min="1" id="rolls-input">
        </fieldset>

        {% render 'form-fieldset',
          legend: section.settings.scanning_label,
          type: 'scanner',
          property: 'Scanner',
          input_type: 'radio',
          show_help: true,
          help_label: section.settings.help_label_scanner,
          help_sub_label: section.settings.help_sub_label_scanning
        %}

        {% render 'form-fieldset',
          legend: section.settings.resolution_label,
          type: 'resolution',
          property: 'Resolution',
          input_type: 'radio',
          show_help: true,
          help_label: section.settings.help_label_resolution,
          help_sub_label: section.settings.help_sub_label_resolution
        %}

        {% render 'form-fieldset',
          legend: section.settings.printing_label,
          type: 'printing',
          property: 'Printing',
          input_type: 'radio',
          show_help: true,
          help_label: section.settings.help_label_printing,
          help_sub_label: section.settings.help_sub_label_printing
        %}

        {% render 'form-fieldset',
          legend: section.settings.addons_label,
          type: 'addon',
          property: 'Addon',
          input_type: 'checkbox'
        %}

        {% render 'form-fieldset',
          legend: section.settings.delivery_label,
          type: 'delivery',
          property: 'Delivery',
          input_type: 'radio',
          show_help: true,
          help_label: section.settings.help_label_delivery
        %}

        {% render 'order-summary', section: section, product: product, product_form_id: product_form_id %}
      </form>
    </div>
  </section>
</product-info>

{% render 'form-summary-scripts', section: section %}

<script type="application/ld+json">
  {{ product | structured_data }}
</script>

