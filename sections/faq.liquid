{{ 'faq.css' | asset_url | stylesheet_tag }}
<script src="{{ 'faq.js' | asset_url }}" defer="defer"></script>

<section class="faq">
  <div class="layout-wrapper">
    <div class="faq__inner">
      {% if section.settings.heading != blank %}
        <h2 class="type-h1-small faq__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      <div class="faq-list" data-faq-list>
        {% for block in section.blocks %}
          {% render 'faq-card', block: block, question: block.settings.question, answer: block.settings.answer %}
        {% endfor %}
      </div>

      {% if section.settings.show_view_all %}
        <div class="faq__button-wrapper">
          <a href="{{ section.settings.view_all_link }}" class="faq-link secondary-button">
            {{ section.settings.view_all_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all FAQs' button",
      "default": true
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Link for 'View all FAQs'"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all button text",
      "default": "View all FAQs"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ item",
      "settings": [
        {
          "type": "text",
          "id": "faq-heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your turnaround time?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Our standard turnaround is 2-3 business days.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "category": "FAQ Homepage"
    }
  ]
}
{% endschema %}
