{{ 'gear-rental.css' | asset_url | stylesheet_tag }}

<div class="gear-rental">
  <div class="layout-wrapper">
    <div class="layout-grid">
      <section class="gear-rental__header-wrapper" aria-labelledby="gear-rental-heading">
        {% if section.settings.heading %}
          <h1 id="gear-rental-heading" class="type-h1-large">{{ section.settings.heading }}</h1>
        {% endif %}
        {% if section.settings.subheading %}
          <h2 class="type-h1-small">{{ section.settings.subheading }}</h2>
        {% endif %}
        {% if section.settings.subparagraph %}
          <p class="type-p-x-large">{{ section.settings.subparagraph }}</p>
        {% endif %}
      </section>
    </div>

    <section class="gear-list" aria-labelledby="gear-list-title">
      {% if section.settings['container-title'] %}
        <h3 id="gear-list-title" class="gear-list__title type-p-large">{{ section.settings['container-title'] }}</h3>
      {% endif %}
      <div class="gear-list__inner">
        {% for block in section.blocks %}
          <div class="gear-card">
            <div class="gear-card__indicator" aria-hidden="true"></div>
            <div class="gear-card__content">
              <div class="gear-card__title-wrapper">
                {% if block.settings.brand %}
                  <h4 class="type-h1-small">{{ block.settings.brand }}</h4>
                {% endif %}
                {% if block.settings['camera-name'] %}
                  <h5 class="type-h1-small">{{ block.settings['camera-name'] }}</h5>
                {% endif %}
              </div>
              <div class="gear-card__price-wrapper">
                {% if block.settings['price-per-day'] %}
                  <div class="gear-card__price-card">
                    <p class="type-p-large">{{ block.settings['price-per-day'] }}</p>
                    <p class="type-p">/day or weekend</p>
                  </div>
                {% endif %}
                {% if block.settings['price-per-week'] %}
                  <div class="gear-card__price-card">
                    <p class="type-p-large">{{ block.settings['price-per-week'] }}</p>
                    <p class="type-p">/week</p>
                  </div>
                {% endif %}
              </div>
              {% if block.settings['camera-description'] %}
                <div class="gear-card__description">
                  <p class="type-p">{{ block.settings['camera-description'] }}</p>
                </div>
              {% endif %}
              <div class="gear-card-accordions-list" data-gear-accordion-list>
                {% for i in (1..3) %}
                  {% assign accordion_title_key = 'accordion-' | append: i | append: '-title' %}
                  {% assign accordion_content_key = 'accordion-' | append: i %}
                  {% assign accordion_title = block.settings[accordion_title_key] %}
                  {% assign accordion_content = block.settings[accordion_content_key] %}

                  {% if accordion_title != blank %}
                    {% assign accordion_uid = block.id | append: '-accordion-' | append: i %}
                    <button
                      class="gear-card-accordion"
                      type="button"
                      aria-expanded="false"
                      aria-controls="gear-accordion-content-{{ accordion_uid }}"
                      data-gear-accordion-trigger
                    >
                      <div class="gear-card-accordion__header">
                        <div class="gear-card-accordion__indicator" aria-hidden="true"></div>
                        <p class="type-p">{{ accordion_title }}</p>
                      </div>
                      <div
                        class="gear-card-accordion__content"
                        id="gear-accordion-content-{{ accordion_uid }}"
                        role="region"
                        aria-labelledby="gear-accordion-{{ accordion_uid }}"
                        hidden
                        data-gear-accordion-content
                      >
                        <div class="gear-card-accordion__inner">
                          <p class="type-p" aria-hidden="true">—</p>
                          <div class="type-p">{{ accordion_content }}</div>
                        </div>
                      </div>
                    </button>
                  {% endif %}
                {% endfor %}
              </div>
              {% if block.settings.link %}
                <div class="gear-card__button-wrapper gear-card__button-wrapper--mobile">
                  <a
                    href="{{ block.settings.link }}"
                    target="_blank"
                    class="primary-button primary-button--black"
                    rel="noopener"
                  >
                    Rent now
                  </a>
                </div>
              {% endif %}
            </div>
            <div class="gear-card__image-wrapper">
              {% if block.settings['camera-photo'] %}
                <div class="gear-card__image-inner">
                  <img
                    src="{{ block.settings['camera-photo'] | image_url }}"
                    width="auto"
                    height="auto"
                    alt="{{ block.settings.brand }} {{ block.settings['camera-name'] }}"
                  >
                </div>
              {% endif %}
              {% if block.settings.link %}
                <div class="gear-card__button-wrapper gear-card__button-wrapper--desktop">
                  <div data-hover-shake>
                    <a
                      href="{{ block.settings.link }}"
                      target="_blank"
                      class="primary-button primary-button--black"
                      rel="noopener"
                    >
                      Rent now
                    </a>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </section>
  </div>
</div>

{% schema %}
{
  "name": "gear-rental",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Page Title",
      "default": "Gear Rental"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub Heading",
      "default": "<p>From cult point-and-shoots to medium format legends — every camera is tested and includes a free dev + scan voucher.</p>"
    },
    {
      "type": "textarea",
      "id": "subparagraph",
      "label": "Paragraph",
      "default": "<p>Test-drive the classics before you commit. Every body is CLA’d, shot-tested, and leaves with fresh batteries—and a free dev-and-scan voucher to sweeten the weekend. From point-and-shoot Contax T2s to a Hasselblad 500 CM kit, the shelf rotates weekly. Try the classics before you own them.</p>"
    },
    {
      "type": "text",
      "id": "container-title",
      "label": "Title for gear container"
    }
  ],
  "blocks": [
    {
      "type": "rental",
      "name": "Rental Item",
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": "Camera link"
        },
        {
          "type": "text",
          "id": "brand",
          "label": "Brand name"
        },
        {
          "type": "text",
          "id": "camera-name",
          "label": "Camera name"
        },
        {
          "type": "text",
          "id": "price-per-day",
          "label": "Price per day"
        },
        {
          "type": "text",
          "id": "price-per-week",
          "label": "Price per week"
        },
        {
          "type": "image_picker",
          "id": "camera-photo",
          "label": "Image of camera"
        },
        {
          "type": "textarea",
          "id": "camera-description",
          "label": "Description of camera"
        },
        {
          "type": "text",
          "id": "accordion-1-title",
          "label": "Question title",
          "default": "What's included?"
        },
        {
          "type": "richtext",
          "id": "accordion-1",
          "label": "What's included information"
        },
        {
          "type": "text",
          "id": "accordion-2-title",
          "label": "Question title",
          "default": "How to works?"
        },
        {
          "type": "richtext",
          "id": "accordion-2",
          "label": "How to work information"
        },
        {
          "type": "text",
          "id": "accordion-3-title",
          "label": "Question title",
          "default": "Terms of use"
        },
        {
          "type": "richtext",
          "id": "accordion-3",
          "label": "Terms of use information"
        }
      ]
    }
  ]
}
{% endschema %}
