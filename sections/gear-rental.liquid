{{ 'gear-rental.css' | asset_url | stylesheet_tag }}

<div class="gear-rental">
  <div class="layout-wrapper">
    <div class="layout-grid">
      <section class="gear-rental__header-wrapper" aria-labelledby="gear-rental-heading">
        <h1 id="gear-rental-heading" class="type-h1-large">Gear Rental</h1>
        <h2 class="type-h1-small">
          From cult point-and-shoots to medium format legends â€” every camera is tested and includes a free dev + scan
          voucher.
        </h2>
        <p class="type-p-x-large">
          Test-drive the classics before you commit. Every body is CLAâ€™d, shot-tested, and leaves with fresh
          batteriesâ€”and a free dev-and-scan voucher to sweeten the weekend. From point-and-shoot Contax T2s to a
          Hasselblad 500 CM kit, the shelf rotates weekly. Try the classics before you own them.
        </p>
      </section>
    </div>

    <section class="gear-list" aria-labelledby="gear-list-title">
      <h3 id="gear-list-title" class="gear-list__title type-p-large">Select a Camera ðŸ“·</h3>
      <div class="gear-list__inner">
        {% for rental in shop.metaobjects.gear_rental.values %}
          <div class="gear-card">
            <div class="gear-card__indicator" aria-hidden="true"></div>
            <div class="gear-card__content">
              <div class="gear-card__title-wrapper">
                {% if rental.brand_name %}
                  <h4 class="type-h1-small">{{ rental.brand_name }}</h4>
                {% endif %}
                {% if rental.title %}
                  <h5 class="type-h1-small">{{ rental.title }}</h5>
                {% endif %}
              </div>
              <div class="gear-card__price-wrapper">
                {% if rental.price_per_day %}
                  <div class="gear-card__price-card">
                    <p class="type-p-large">{{ rental.price_per_day }}</p>
                    <p class="type-p">/day or weekend</p>
                  </div>
                {% endif %}
                {% if rental.price_per_week %}
                  <div class="gear-card__price-card">
                    <p class="type-p-large">{{ rental.price_per_week }}</p>
                    <p class="type-p">/week</p>
                  </div>
                {% endif %}
              </div>
              {% if rental.description %}
                <div class="gear-card__description">
                  <p class="type-p">
                    <span class="hide-on-desktop">{{ rental.description | strip_html | truncatewords: 50 }}</span>
                    <span class="hide-on-mobile">{{ rental.description }}</span>
                  </p>
                </div>
              {% endif %}
              <div class="gear-card-accordions-list" data-gear-accordion-list>
                {% if rental.accordion_title_1 %}
                  {% assign accordion_uid = rental.id | append: '-accordion-1' %}
                  <button
                    class="gear-card-accordion"
                    type="button"
                    aria-expanded="false"
                    aria-controls="gear-accordion-content-{{ accordion_uid }}"
                    data-gear-accordion-trigger
                  >
                    <div class="gear-card-accordion__header">
                      <div class="gear-card-accordion__indicator" aria-hidden="true"></div>
                      <p class="type-p">{{ rental.accordion_title_1 }}</p>
                    </div>
                    <div
                      class="gear-card-accordion__content"
                      id="gear-accordion-content-{{ accordion_uid }}"
                      role="region"
                      aria-labelledby="gear-accordion-{{ accordion_uid }}"
                      hidden
                      data-gear-accordion-content
                    >
                      <div class="gear-card-accordion__inner">
                        <p class="type-p" aria-hidden="true">â€”</p>
                        <div class="type-p">{{ rental.accordion_content_1 | metafield_tag }}</div>
                      </div>
                    </div>
                  </button>
                {% endif %}
                {% if rental.accordion_title_2 %}
                  {% assign accordion_uid_b = rental.id | append: '-accordion-2' %}
                  <button
                    class="gear-card-accordion"
                    type="button"
                    aria-expanded="false"
                    aria-controls="gear-accordion-content-{{ accordion_uid_b }}"
                    data-gear-accordion-trigger
                  >
                    <div class="gear-card-accordion__header">
                      <div class="gear-card-accordion__indicator" aria-hidden="true"></div>
                      <p class="type-p">{{ rental.accordion_title_2 }}</p>
                    </div>
                    <div
                      class="gear-card-accordion__content"
                      id="gear-accordion-content-{{ accordion_uid_b }}"
                      role="region"
                      aria-labelledby="gear-accordion-{{ accordion_uid_b }}"
                      hidden
                      data-gear-accordion-content
                    >
                      <div class="gear-card-accordion__inner">
                        <p class="type-p" aria-hidden="true">â€”</p>
                        <div class="type-p">{{ rental.accordion_content_2 | metafield_tag }}</div>
                      </div>
                    </div>
                  </button>
                {% endif %}
              </div>
              {% assign path_prefix = routes.root_url | append: '/gear-rental/' %}
              {% if rental.system.handle %}
                {% assign fallback_url = path_prefix
                  | append: rental.system.handle
                  | replace: '///', '/'
                  | replace: '//', '/'
                %}
              {% endif %}
              {% if rental.online_store_url or rental.system.handle %}
                <div class="gear-card__button-wrapper gear-card__button-wrapper--mobile">
                  <a
                    href="/pages{{ rental.online_store_url | default: fallback_url }}"
                    class="primary-button primary-button--black"
                    >View details</a
                  >
                </div>
              {% endif %}
            </div>
            <div class="gear-card__image-wrapper">
              {% if rental.image %}
                <div class="gear-card__image-inner">
                  <img
                    src="{{ rental.image | image_url }}"
                    width="auto"
                    height="auto"
                    alt="{{ rental.brand_name }} {{ rental.title }}"
                  >
                </div>
              {% endif %}
              {% if rental.online_store_url or rental.system.handle %}
                <div class="gear-card__button-wrapper gear-card__button-wrapper--desktop">
                  <div data-hover-shake>
                    <a
                      href="/pages{{ rental.online_store_url | default: fallback_url }}"
                      class="primary-button primary-button--black primary-button--black-hover-outline"
                      >View details</a
                    >
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </section>
  </div>
</div>

{% schema %}
{
  "name": "gear-rental",
  "settings": []
}
{% endschema %}
