<section class="image-simple">
  <div class="layout-wrapper">
    <div class="image-simple__inner">
      {% if section.settings.image != blank %}
        <div class="image-simple__image-inner">
          <img
            src="{{ section.settings.image | image_url }}"
            alt="{{ section.settings.alt | escape }}"
            loading="lazy"
            width="auto"
            height="auto"
          >
        </div>
      {% endif %}
      {% if section.settings.caption != blank %}
        <div class="image-simple__caption type-p">{{ section.settings.caption }}</div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .image-simple__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    max-width: 700px;
    margin: 0 auto;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  .image-simple__image-inner {
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 24px;
  }
</style>

{% schema %}
{
  "name": "Image (simple)",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Image" },
    { "type": "text", "id": "alt", "label": "Alt text" },
    { "type": "text", "id": "caption", "label": "Caption" }
  ],
  "presets": [{ "name": "Image (simple)", "category": "Media" }]
}
{% endschema %}
