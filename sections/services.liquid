{{ 'services.css' | asset_url | stylesheet_tag }}

<section
  class="services"
  aria-labelledby="services-heading"
>
  <div class="layout-wrapper">
    <div class="services__header">
      {% if section.settings.heading != blank %}
        <h2
          id="services-heading"
          class="services__heading type-h1-large"
        >
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      {% if section.blocks.size > 0 %}
        <nav
          class="services-nav"
          aria-label="Services navigation"
        >
          {% for block in section.blocks %}
            {% render 'anchor-button', title: block.settings.link_text, id: block.settings.anchor_id %}
          {% endfor %}
        </nav>
      {% endif %}
    </div>
    <div
      class="services-intro"
      {% if section.settings.subheading != blank %}
        aria-labelledby="services-subheading"
      {% endif %}
    >
      <div class="layout-grid">
        {% if section.settings.subheading != blank %}
          <h2 class="services-intro__subheading type-h1-small">{{ section.settings.subheading }}</h2>
        {% endif %}
        {% if section.settings['services-paragraph-1'] != blank %}
          <p class="services-intro__paragraph-1 type-p-x-large">
            {{ section.settings['services-paragraph-1'] | newline_to_br }}
          </p>
        {% endif %}
        {% if section.settings.servicesimage != blank %}
          <div class="services-intro__image-wrapper">
            <img
              src="{{ section.settings.servicesimage | image_url }}"
              width="auto"
              height="auto"
              class="service-hero-image"
              alt="{{ section.settings.heading | escape }}"
              role="img"
            >
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "services",
  "max_blocks": 10,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Page Heading",
      "default": "Our Services"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Sub Heading",
      "default": "Bellows began as a single pro lab in Miami and, in just a few short years, has grown into a small constellation of studios—Miami, Chicago and pop-ups in Atlanta and Orlando—processing thousands of rolls every month."
    },
    {
      "type": "textarea",
      "id": "services-paragraph-1",
      "label": "Paragraph",
      "default": "The recipe hasn’t changed: fresh chemistry mixed daily, scanners tuned by hand, and a crew of film nerds who still get goose-bumps when a perfect negative hits the light table. From one-hour C-41 to exhibition-grade drum scans, Bellows exists to bridge the gap between analogue craft and a digital-first world, giving photographers a place where curiosity is met with real expertise."
    },
    {
      "type": "image_picker",
      "id": "servicesimage",
      "label": "Services Main Image"
    }
  ],
  "blocks": [
    {
      "type": "service-link",
      "name": "Service Link",
      "settings": [
        { "type": "text", "id": "link_text", "label": "Link Text" },
        { "type": "text", "id": "anchor_id", "label": "Anchor ID (no spaces use '-')" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Services Details",
      "category": "Services",
      "blocks": []
    }
  ]
}
{% endschema %}
