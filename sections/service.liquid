{{ 'services.css' | asset_url | stylesheet_tag }}

<div id="{{ section.settings.anchor_id }}" class="service-card">
  <div class="layout-wrapper">
    <div class="layout-grid">
      <div class="service-card__content">
        {% if section.settings.heading != blank %}
          <div class="service-card__heading-wrapper">
            <h3 class="service-card__heading type-h1-x-small">{{ section.settings.heading }}</h3>
            {% if section.settings.badge != blank %}
              <div class="service-card__badge type-h1-x-small">{{ section.settings.badge }}</div>
            {% endif %}
          </div>
        {% endif %}
        {% if section.settings.paragraph != blank %}
          <p class="service-card__paragraph type-p">{{ section.settings.paragraph | newline_to_br }}</p>
        {% endif %}
        {% if section.settings.notes != blank %}
          <div class="service-card__notes type-p">
            {{ section.settings.notes }}
          </div>
        {% endif %}
      </div>
      {% comment %}
        <div class="service-card__table-wrapper">
          {% if section.settings['table-caption'] != blank %}
            <p class="service-card__table-caption type-p">
              {{ section.settings['table-caption'] }}
            </p>
          {% endif %}
        </div>
      {% endcomment %}

      {% if section.settings.button != blank and section.settings.cta != blank %}
        <div class="service-card__button-wrapper">
          <div data-hover-shake>
            <a class="primary-button primary-button--small" href="{{ section.settings.cta }}">
              {{- section.settings.button -}}
            </a>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  {% if section.settings['service-image-left'] != blank %}
    <div class="service-card__image-wrapper service-card__image-wrapper--left">
      <div class="service-card__image-wrapper-inner" data-parallax>
        <img
          src="{{ section.settings['service-image-left'] | image_url }}"
          width="auto"
          height="auto"
          alt="Service Image"
        >
      </div>
    </div>
  {% endif %}
  {% if section.settings['service-image-right'] != blank %}
    <div class="service-card__image-wrapper service-card__image-wrapper--right">
      <div class="service-card__image-wrapper-inner" data-parallax>
        <img
          src="{{ section.settings['service-image-right'] | image_url }}"
          width="auto"
          height="auto"
          alt="Service Image"
        >
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "servicetype",
  "settings": [
    {
      "type": "text",
      "id": "anchor_id",
      "label": "Anchor ID (no spaces use '-')"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Service Heading"
    },
    {
      "type": "text",
      "id": "badge",
      "label": "Badge Text"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Service Text"
    },
    {
      "type": "richtext",
      "id": "notes",
      "label": "Service Notes"
    },
    {
      "type": "text",
      "id": "table-caption",
      "label": "Table Caption"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Call to Action Name"
    },
    {
      "type": "url",
      "id": "cta",
      "label": "Call to Action"
    },
    {
      "type": "image_picker",
      "id": "service-image-right",
      "label": "Image right"
    },
    {
      "type": "image_picker",
      "id": "service-image-left",
      "label": "Image left"
    }
  ],
  "presets": [
    {
      "name": "Type of Service",
      "category": "Services"
    }
  ]
}
{% endschema %}
