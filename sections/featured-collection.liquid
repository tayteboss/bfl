{{ 'collection.css' | asset_url | stylesheet_tag }}

<div
  class="featured-collection"
  aria-labelledby="featured-collection-heading"
  data-location-selector
>
  <div class="layout-wrapper">
    <section class="featured-collection__header">
      <h1
        id="featured-collection-heading"
        class="featured-collection__heading type-h1-large"
      >
        {{ section.settings.heading }}
      </h1>
      <div
        class="collection-filters"
        role="navigation"
        aria-label="Collection filters"
      >
        {% for block in section.blocks %}
          {% assign collection = collections[block.settings.collection] %}
          {% if collection %}
            {% render 'filter-button', title: collection.title, id: collection.id, url: collection.url %}
          {% endif %}
        {% endfor %}
      </div>
    </section>
  </div>

  <section
    class="collection-list layout-grid layout-wrapper"
    role="region"
    aria-label="Featured products"
  >
    {% assign has_visible_products = false %}
    {% for product in collections.frontpage.products %}
      {% assign hidden = false %}
      {% for tag in product.tags %}
        {% if tag == 'Hidden' %}
          {% assign hidden = true %}
          {% break %}
        {% endif %}
      {% endfor %}
      {% unless hidden %}
        {% assign has_visible_products = true %}
        {% render 'product-card', product: product %}
      {% endunless %}
    {% endfor %}

    {% unless has_visible_products %}
      <div class="collection-empty-message">
        <h2 class="collection-empty-message__title">No products found</h2>
      </div>
    {% endunless %}
  </section>
</div>

{% schema %}
{
  "name": "featured-collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Products"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Homepage",
      "blocks": []
    }
  ]
}
{% endschema %}
