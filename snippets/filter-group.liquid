{% comment %}
  Reusable filter group
  Props:
  - title: string (legend)
  - items: array of strings
  - type: string (data-filter-type value)
{% endcomment %}

{% if items.size > 0 %}
  <fieldset class="filter-group">
    <legend class="filter-group__title type-button-large">{{ title }}</legend>
    <div class="filter-group__items">
      {% for item in items %}
        {% if item != blank %}
          {% unless item contains 'next-steps' %}
            {% assign item_id = item | handleize | append: '-' | append: type | append: '-' | append: forloop.index %}
            <label class="filter-group__item primary-button primary-button--modal-filter" for="{{ item_id }}">
              <input
                type="checkbox"
                id="{{ item_id }}"
                value="{{ item | escape }}"
                class="filter-option"
                data-filter-type="{{ type }}"
              >
              <span class="active-filter-remove">Ã—</span>
              {{ item }}
            </label>
          {% endunless %}
        {% endif %}
      {% endfor %}
    </div>
  </fieldset>
{% endif %}
