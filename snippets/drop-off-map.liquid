<section class="drop-off-map" role="region" aria-label="Drop-off locations map">
  {% unless use_small_map %}
    <div class="drop-off-map__controls drop-off-map__controls--mobile" aria-label="Map controls">
      {% if section.settings.title %}
        <h3 class="drop-off-map__controls-title type-h2">{{ section.settings.title }}</h3>
      {% else %}
        <h3 class="drop-off-map__controls-title type-h2">Discover Drop-off Locations</h3>
      {% endif %}

      {% if section.settings.description %}
        <p class="drop-off-map__controls-description type-p-x-small">{{ section.settings.description }}</p>
      {% else %}
        <p class="drop-off-map__controls-description type-p-x-small">
          Explore the nearby drop-off options for a hassle-free shopping experience. Utilize our partnered locations to
          conveniently send in your items!
        </p>
      {% endif %}

      <form id="locationSearchFormMobile" class="drop-off-map__search" role="search" aria-label="Search locations">
        <input
          id="locationSearchInputMobile"
          type="text"
          placeholder="Enter city or ZIP"
          aria-label="Search for nearest location"
          content="width=device-width, initial-scale=1, maximum-scale=1"
          required
        >
        <button class="type-p-small uppercase" type="submit" aria-label="Search locations">Search</button>
      </form>
      {% comment %} <div class="drop-off-map__list-results" role="region" aria-live="polite">when searching bring up a list of results</div> {% endcomment %}
    </div>
  {% endunless %}

  <div class="drop-off-map__inner">
    <div
      id="dropOffMap"
      class="drop-off-map__map"
      role="application"
      aria-label="Interactive map of drop-off locations"
    ></div>
    <div class="drop-off-map__zoom" role="group" aria-label="Map zoom controls">
      <button class="drop-off-map__zoom-button" type="button" id="zoomInBtn" aria-label="Zoom in">+</button>
      <button class="drop-off-map__zoom-button" type="button" id="zoomOutBtn" aria-label="Zoom out">-</button>

      {% unless use_small_map %}
        {% if settings.join_us_url %}
          <a href="{{ settings.join_us_url }}" class="drop-off-map__join-us-wrapper">Join Our Drop-off Network</a>
        {% else %}
          <a href="/pages/join-us" class="drop-off-map__join-us-wrapper">Join Our Drop-off Network</a>
        {% endif %}
      {% endunless %}
    </div>

    {% unless use_small_map %}
      <div class="drop-off-map__controls drop-off-map__controls--desktop" aria-label="Map controls">
        {% if section.settings.title %}
          <h3 class="drop-off-map__controls-title type-h2">{{ section.settings.title }}</h3>
        {% else %}
          <h3 class="drop-off-map__controls-title type-h2">Discover Drop-off Locations</h3>
        {% endif %}

        {% if section.settings.description %}
          <p class="drop-off-map__controls-description type-p-x-small">{{ section.settings.description }}</p>
        {% else %}
          <p class="drop-off-map__controls-description type-p-x-small">
            Explore the nearby drop-off options for a hassle-free shopping experience. Utilize our partnered locations
            to conveniently send in your items!
          </p>
        {% endif %}

        <form id="locationSearchFormDesktop" class="drop-off-map__search" role="search" aria-label="Search locations">
          <input
            id="locationSearchInputDesktop"
            type="text"
            placeholder="Enter city or ZIP"
            aria-label="Search for nearest location"
            content="width=device-width, initial-scale=1, maximum-scale=1"
            required
          >
          <button class="type-p-small uppercase" type="submit" aria-label="Search locations">Search</button>
        </form>
        {% comment %} <div class="drop-off-map__list-results" role="region" aria-live="polite">when searching bring up a list of results</div> {% endcomment %}
      </div>
    {% endunless %}
  </div>
</section>
